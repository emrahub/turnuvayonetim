# Local Development Environment Configuration
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control!

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/tournament
REDIS_URL=redis://localhost:6379

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3005
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_WS_URL=ws://localhost:3003

# Port Configuration
API_PORT=4000
WS_PORT=3003
FRONTEND_PORT=3005

# Authentication & Security
JWT_SECRET=your-jwt-secret-key-replace-in-production
REFRESH_TOKEN_SECRET=your-refresh-token-secret-replace-in-production
SESSION_SECRET=your-session-secret-replace-in-production
PASSWORD_PEPPER=your-password-pepper-replace-in-production

# Codex Agent Credentials
# Replace with your actual Codex account credentials
# For OAuth tokens, use the token value itself, not the literal "OAUTH_TOKEN"
CODEX_1_EMAIL=your-architect-email@example.com
CODEX_1_PASSWORD=your-architect-password-or-oauth-token
CODEX_2_EMAIL=your-backend-email@example.com
CODEX_2_PASSWORD=your-backend-password-or-oauth-token
CODEX_3_EMAIL=your-frontend-email@example.com
CODEX_3_PASSWORD=your-frontend-password-or-oauth-token
CODEX_4_EMAIL=your-devops-email@example.com
CODEX_4_PASSWORD=your-devops-password-or-oauth-token

# Development Settings
NODE_ENV=development
LOG_LEVEL=debug

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3005,http://localhost:3000

# Email Service (Optional for development)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password

# Feature Flags
ENABLE_2FA=false
ENABLE_EMAIL_VERIFICATION=false
ENABLE_RATE_LIMITING=true

# Agent Configuration
AGENT_TIMEOUT=30000
AGENT_RETRY_COUNT=3
AGENT_CONCURRENT_LIMIT=2

# Monitoring (Optional)
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=