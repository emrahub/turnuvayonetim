# Production Environment Configuration
# Copy this file to .env.production and fill in the values

# Application
NODE_ENV=production
LOG_LEVEL=info

# Database Configuration
POSTGRES_DB=tournament
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-postgres-password
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PASSWORD=your-secure-redis-password
REDIS_PORT=6379

# Backend API Configuration
API_PORT=4000
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-32-characters
SESSION_SECRET=your-super-secure-session-secret-key-minimum-32-characters

# WebSocket Configuration
WS_PORT=3003
WS_SECRET=your-super-secure-websocket-secret-key

# Frontend Configuration
FRONTEND_PORT=3005
NEXT_PUBLIC_API_URL=https://api.yourdomain.com
NEXT_PUBLIC_WS_URL=wss://ws.yourdomain.com
NEXT_PUBLIC_APP_URL=https://yourdomain.com
FRONTEND_URL=https://yourdomain.com

# Agent Configuration (if using agents in production)
AGENT_HEADLESS=true
AGENT_TIMEOUT=60000
AGENT_MAX_RETRIES=3

# Agent Credentials (4 Codex Accounts) - Only if needed in production
CODEX_1_EMAIL=your-production-email-1@example.com
CODEX_1_PASSWORD=your-production-password-1
CODEX_2_EMAIL=your-production-email-2@example.com
CODEX_2_PASSWORD=your-production-password-2
CODEX_3_EMAIL=your-production-email-3@example.com
CODEX_3_PASSWORD=your-production-password-3
CODEX_4_EMAIL=your-production-email-4@example.com
CODEX_4_PASSWORD=your-production-password-4

# Docker Registry (for CI/CD)
DOCKER_REGISTRY=your-registry.com
DOCKER_USERNAME=your-username
DOCKER_PASSWORD=your-password

# Deployment Configuration
DEPLOY_HOST=your-production-server.com
DEPLOY_USER=deploy
DEPLOY_PATH=/opt/turnuva

# SSL Configuration (if using custom SSL)
SSL_CERT_PATH=/etc/ssl/certs/yourdomain.crt
SSL_KEY_PATH=/etc/ssl/private/yourdomain.key

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Monitoring (Optional)
PROMETHEUS_ENABLED=false
GRAFANA_ENABLED=false
SENTRY_DSN=your-sentry-dsn-url